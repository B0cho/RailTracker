<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mapViewToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="7dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/mapview_toolbar_menu"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/background_light" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapViewToolbar"
        tools:layout="@layout/fragment_mapview" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/myLocationActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/mylocationbuttoncolors"
        android:clickable="true"
        android:contentDescription="@string/locationButtonContDescription"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:longClickable="true"
        android:minWidth="32dp"
        android:minHeight="32dp"
        android:tint="@color/colorDefaultTint"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_menu_mylocation" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addMyLocationActionButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:backgroundTint="@color/mylocationbuttoncolors"
        android:tint="@color/colorDefaultTint"
        app:fabCustomSize="35dp"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/mapFragmentContainer"
        app:layout_constraintTop_toBottomOf="@+id/mapViewToolbar"
        app:srcCompat="@drawable/sharp_add_black_36"
        android:contentDescription="Add new location" />

</androidx.constraintlayout.widget.ConstraintLayout>

